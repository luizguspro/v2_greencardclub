@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --primary: #084734;
    --secondary: #CEF17B;
    --tertiary: #CEEDB2;
    --background: #F9FFF3;
  }
  
  body {
    @apply bg-greencard-background text-greencard-primary;
  }
}

@layer components {
  .btn-primary {
    @apply bg-greencard-primary hover:bg-greencard-primary/90 text-white font-semibold py-2 px-4 rounded-lg transition-colors;
  }
  
  .btn-secondary {
    @apply bg-greencard-secondary hover:bg-greencard-secondary/90 text-greencard-primary font-semibold py-2 px-4 rounded-lg transition-colors;
  }
  
  .card {
    @apply bg-white rounded-xl shadow-lg p-6;
  }
  
  .input {
    @apply w-full px-4 py-2 border-2 border-greencard-tertiary rounded-lg focus:border-greencard-primary focus:outline-none transition-colors;
  }
  
  .label {
    @apply block text-sm font-semibold text-greencard-primary mb-2;
  }
}

@layer utilities {
  .gradient-primary {
    background: linear-gradient(135deg, #084734 0%, #0a5a42 100%);
  }
  
  .gradient-secondary {
    background: linear-gradient(135deg, #CEF17B 0%, #b8e060 100%);
  }
  
  .text-gradient {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-greencard-primary to-greencard-secondary;
  }
}